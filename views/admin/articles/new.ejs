<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>New Article</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/save" class="formArticles">
                    <input class="form-control inputField" type="text" name="title" placeholder="Enter the title of the article." required>
                    <br>
                    <textarea name="articlebody" id="myarticle" cols="30" rows="" class="form-control" placeholder="Type the text of the article here!"></textarea>
                    <br>
                    <label>Category</label>
                    <select name="category" class="form-control">
                        <% categories.forEach((category) => { %>
                            <option value="<%= category.id %>"><%= category.title %></option>
                        <% }) %>
                    </select>
                    <br>
                    <a href="/admin/articles" class="btn btn-danger">Cancel</a>
                    <button class="btn btn-success">Send</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include ('../../partials/header.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#myarticle",
        plugins: [
            'link autolink advlist image list print fullscream hr preview searchreplace wordcount insertdatetime save media table paste emoticons'
        ]
    })
</script>
