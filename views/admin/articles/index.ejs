<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <h2>Articles</h2>
        <a class="btn" id="btn-purple" href="/admin/articles/new">Create a New Article</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.id %></td>
                        <td><%= article.title %></td>
                        <td><%= article.slug %></td>
                        <td><%= article.category.title %></td>
                        <td>
                            <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-primary">Edit</a href="">
                            <form id="form-cancel" method="POST" action="/articles/delete" style="display: inline;" onsubmit="deleteConfirm(event, this)">
                                <input type="hidden" name="id" value="<%- article.id %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script>
  function deleteConfirm(event, form) {
    event.preventDefault()
    console.log('form did\'nt send!')

    let questionConfirmation = confirm("Do you want to delete this article?")

    if (questionConfirmation) {
        form.submit()
    }
}

</script>
