<%- include ('./partials/header.ejs') %>
<%- include ('./partials/navbarClient.ejs') %>
<body>
    <div class="container person-home">
        <div class="jumbotron jumbotron-fluid" id="bg-dimension-jumbotron">
            <div class="container">
                <h4 class="display-5">MyAweasomeBlog.com</h4>
                <p class="lead">Welcome to MyAweasomeBlog.com!</p>
            </div>
        </div>
        <% articles.forEach(article => { %>
            <div class="card person-home">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn" id="btn-purple">Read Article</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('./partials/footer.ejs') %>
